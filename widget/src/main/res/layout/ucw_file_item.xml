<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:padding="2dp"
             android:focusable="true"
             android:clickable="true"
             android:id="@+id/ucw_item_root"
             android:foreground="@drawable/ucw_item_foreground">
    <com.uploadcare.android.widget.view.SquaredImageView android:id="@+id/ucw_item_tb"
                                                         android:layout_width="match_parent"
                                                         android:layout_height="match_parent"
                                                         android:adjustViewBounds="true"
                                                         android:scaleType="centerCrop"
                                                         android:layout_gravity="top"/>
    <FrameLayout
            android:id="@+id/ucw_item_footer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:background="@color/ucw_item_title_bg"
            android:gravity="center"
            android:visibility="gone">
        <TextView
                android:id="@+id/ucw_item_title"
                style="@style/TextAppearance.AppCompat.Subhead"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="start|center_vertical"
                android:padding="8dp"
                android:textColor="@color/ucw_white_text_87"
                android:ellipsize="marquee"
                android:maxLines="1"/>
    </FrameLayout>
</FrameLayout>